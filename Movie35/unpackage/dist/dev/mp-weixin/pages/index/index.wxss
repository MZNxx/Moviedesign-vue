.carousel {
	width: 100%;
	height: 440rpx;
}
/* 热门影剧 */
.movie-hot{
	margin-top: 12rpx;
	padding: 20rpx;
}
.hot-title-wapper{
	display: flex;
	flex-direction: row;
}
.hot-ico{
	width: 50rpx;
	height: 50rpx;
	margin-top: 25rpx;
}
.hot-title{
	font-size: 20px;
	margin: 25rpx;
	font-weight: bold;
}
.hot{
	width: 100%;
	white-space: nowrap;
}
.single-poster{
	display: inline-block;
	margin-left: 20rpx;
}
.post-wapper{
	display: flex;
	flex-direction: column;
}
.poster{
	width:180rpx;
	height: 250rpx;
	font-size: 0;
	vertical-align:top;
}
.movie-name{
	width: 200rpx;
	margin-top:10rpx;
	font-size: 14px;
	font-weight: bold;
	white-space: nowrap;
}
.movie-score-wrapper{
	display: flex;
	flex-direction: row;
}
.star-ico{
	width: 20rpx;
	height: 20rpx;
	margin-top: 6rpx;
}
.movie-score{
	font-size: 12rpx;
	color: gray;
	margin-left: 8rpx;
}
.guess-u-like{
}
.u-like{
	width:80%;
	height: 200rpx;
}
.search {
width: 100%;
height: 50px;
display: flex;
align-items: center;
justify-content: space-between;
box-sizing: border-box;
padding: 0px 10px;
position: relative;
border-bottom: 2rpx solid #eee;
}
.searchInput {
width: 220px;
height: 100%;
margin-left: 0px;
}
.btstyle{
	font-size: 60%;
	scroll-margin-right: 0rpx;
}
.searchHistory {
width: 100%;
margin-top: 5px;
}
.searchHistoryItem {
width: 100%;
display: flex;
flex-wrap: wrap;
}
.searchHistoryItem view {
/* width: 50px; */
height: 20px;
border: 1px solid #eee;
margin: 0px 5px;
}
.bottonBox{
	display: flex;
	align-items: center;
	position: absolute;
	top: 25%;
	right: 12rpx;
}
.bottonBox .qr{
	font-size: 32rpx;
	padding: 8rpx;
	border: 1rpx solid #eee;
	border-radius: 16rpx;
	margin-right: 10rpx;
}
.bottonBox .qx{
	width: 28rpx;
	height: 28rpx;
}

